    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            height: 100vh;
            width: 250px;
            background: linear-gradient(to bottom, #1e3c72, #2a5298);
            position: fixed;
            overflow-y: auto;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            padding-top: 40px;
        }

        .sidebar-nav {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .nav-item {
            margin: 20px 0;
        }

        .nav-link {
            display: block;
            color: #ffffff;
            text-decoration: none;
            padding: 20px 30px;
            border-radius: 10px;
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .nav-link:hover {
                background-color: #c0c0c0;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .nav-link span {
                font-size: 18px;
                font-weight: bold;
