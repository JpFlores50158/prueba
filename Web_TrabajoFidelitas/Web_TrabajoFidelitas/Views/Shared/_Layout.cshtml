                    <span>@Session["CorreoUsuario"].ToString()</span>
                </li>
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li>
                    <a class="dropdown-item d-flex align-items-center" href="@Url.Action("CerrarSesion","Usuario")">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Sign Out</span>
                    </a>
                </li>

            </ul><!-- End Profile Dropdown Items -->


        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
