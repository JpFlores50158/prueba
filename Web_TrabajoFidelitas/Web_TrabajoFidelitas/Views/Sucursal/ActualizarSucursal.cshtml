@model Web_TrabajoFidelitas.Entidades.Sucursal

@{
    ViewBag.Title = "Actualizar Sucursal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary m-2 my-4" href="@Url.Action("MostrarSucursales","Sucursal")"><i class="bi bi-arrow-left-circle"></i> Regresar </a>
<div class="card shadow mb-4">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class="card-body" style="margin-top: 20px;">
                <div class="table-responsive">
                    <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <h3>Actualizar Sucursal</h3>
                        <hr />
                        @if (ViewBag.MsjPantalla != null)
                        {
                            <div class="alert alert-warning" role="alert" style="text-align:center">
                                @ViewBag.MsjPantalla
                            </div>
                        }

                        @using (Html.BeginForm("ActualizarSucursal", "Sucursal", FormMethod.Post, new { @class = "row g-3 needs-validation", novalidate = "novalidate" }))
                        {
                            @Html.HiddenFor(m => m.idSucursal)
                            <div class="form-group my-3">
                                @Html.Label("Nombre de la Sucursal")
                                @Html.TextBoxFor(m => m.nombreSucursal, new { @class = "form-control", @placeholder = "Nombre", @required = "true", @type = "text", @maxlength = "100" })
                                @Html.ValidationMessageFor(m => m.nombreSucursal, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">Por favor, escriba el nombre de la sucursal respectiva</div>
                            </div>

                            <div class="form-group my-3">
                                @Html.Label("Direccion de la Sucursal")
                                @Html.TextBoxFor(m => m.direccionSucursal, new { @class = "form-control", @placeholder = "Dirección", @required = "true", @type = "text", @maxlength = "255" })
                                @Html.ValidationMessageFor(m => m.direccionSucursal, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">Por favor, escriba la dirección de la sucursal respectiva</div>
                            </div>
                            <div class="form-group my-3">
                                @Html.Label("ID de la Ciudad")
                                @Html.DropDownListFor(m => m.idCiudadSucursal, ViewBag.Cuidades as List<SelectListItem>, new { @class = "form-control form-control-user", @required = "true" })
                                @Html.ValidationMessageFor(m => m.idCiudadSucursal, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">Por favor, escoga un id respectivo</div>
                            </div>
                            <div class="form-group my-3">
                                @Html.Label("   Estado")

                                @Html.DropDownListFor(m => m.estado, new SelectList(new[] { new SelectListItem { Text = "Seleccione....", Value = "null" }, new SelectListItem { Text = "Inactivo", Value = "false" }, new SelectListItem { Text = "Activo", Value = "true" } }, "Value", "Text"), new { @class = "form-control" })
                            </div>

                            <div style="display: flex; align-items: center; flex-direction: column;">
                                <input type="submit" class="btn btn-primary btn-block" value="Actualizar Sucursal" style="margin-top: 20px; margin-bottom: 20px;">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>