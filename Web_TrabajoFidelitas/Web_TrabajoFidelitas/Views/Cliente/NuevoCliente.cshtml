@model Web_TrabajoFidelitas.Entidades.Cliente

@{
    ViewBag.Title = "Registrar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary m-2 my-4" href="@Url.Action("MostrarClientes","Cliente")"><i class="bi bi-arrow-left-circle"></i> Regresar </a>
<div class="card shadow mb-4">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class="card-body" style="margin-top: 20px;">
                <div class="table-responsive" style="overflow-x: hidden;">
                    <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <h3>Agregar Cliente</h3>
                        <hr />
                        @if (ViewBag.MsjPantalla != null)
                        {
                            <div class="alert alert-warning" role="alert" style="text-align:center">
                                @ViewBag.MsjPantalla
                            </div>
                        }

                        @using (Html.BeginForm("NuevoCliente", "Cliente", FormMethod.Post, new { @class = "row g-3 needs-validation", novalidate = "novalidate" }))
                        {
                            <div class="form-group my-4">
                                @Html.Label("Nombre Completo del Cliente")
                                @Html.TextBoxFor(m => m.nombreCliente, new { @class = "form-control", @placeholder = "Nombre", @required = "true", @type = "text", @maxlength = "100" })
                                @Html.ValidationMessageFor(m => m.nombreCliente, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">Por favor, ingrese el nombre del cliente</div>
                            </div>
                            <div class="form-group my-4">
                                @Html.Label("Teléfono del Cliente")
                                @Html.TextBoxFor(m => m.telefonoCliente, new { @class = "form-control", @placeholder = "Teléfono", @required = "true", @type = "tel", })
                                @Html.ValidationMessageFor(m => m.telefonoCliente, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">Por favor, ingrese el teléfono del cliente con su formato</div>
                            </div>
                            <div class="form-group my-4">
                                @Html.Label("Dirección del Cliente")
                                @Html.TextBoxFor(m => m.direccionCliente, new { @class = "form-control", @placeholder = "Dirección", @required = "true", @type = "text", @maxlength = "255" })
                                @Html.ValidationMessageFor(m => m.direccionCliente, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">Por favor, ingrese la dirección del cliente</div>
                            </div>
                            <div class="form-group my-4">
                                @Html.Label("Correo Electrónico del Cliente")
                                @Html.TextBoxFor(m => m.emailCliente, new { @class = "form-control", @placeholder = "Email", @required = "true", @type = "email", @maxlength = "30" })
                                @Html.ValidationMessageFor(m => m.emailCliente, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">Por favor, ingrese el correo del cliente con el formato de un correo electrónico</div>
                            </div>

                            <div style="display: flex; align-items: center; flex-direction: column;">
                                <input type="submit" class="btn btn-primary btn-block" value="Registrar Cliente" style="margin-top: 20px; margin-bottom: 20px;">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
